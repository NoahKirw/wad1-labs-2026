{{> menu id="about"}}

<section class="ui left aligned middle aligned segment">

  <h2>About the Playlist App</h2>
  <p>
    More information about the app
  </p>

  <div class="ui three stackable cards">
    {{#each emps}}
      <div class="card">
        <div class="image">
          <img src="{{this.image}}" alt="{{this.fullname}}">
        </div>
        <div class="content">
          <a class="header">{{this.fullname}}</a>
          <div class="meta">
            <span class="date">Joined in {{this.joined}}</span>
          </div>
          <div class="description">
            {{this.name}} is a {{this.job}} living in {{this.city}}.
          </div>
        </div>
        <div class="extra content">
          <a>
            <i class="user icon"></i>
            {{this.mates}} contacts
          </a>
        </div>
      </div>
    {{/each}}
  </div>

</section>